pipeline {
  agent { label 'docker' } 

  stages{
    stage("package"){
      tools{
        maven 'maven 3.6.1'  
      }
      when{
        changeset "**/worker/**"
      }
      steps{
        container('jnlp'){
          sh 'cd worker; mvn compile; mvn package -DskipTests'
          sh 'ls -lah; ls -lah target'
        }
      }
    }

    stage("build-image"){
      when{
        changeset "**/worker/**"
      }
      steps{
        container('kaniko'){
          sh 'ls -lah'
        }
      }
    }

    
  }
}
